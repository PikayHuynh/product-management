extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1(class="mb-4") Cập nhật thông tin cá nhân

  +alert-success(5000)
  +alert-error(5000)
  
  form(
    action=`${prefixAdmin}/my-account/edit?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="mb-3")
      label(for="fullName" class="form-label") Họ tên 
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        required
        value=user.fullName
      )

    div(class="mb-3")
      label(for="email" class="form-label") Email 
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        value=user.email
      )

    div(class="mb-3")
      label(for="password" class="form-label") Mật khẩu
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
      )

    div(class="mb-3")
      label(for="phone" class="form-label") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=user.phone
      )

    div(class="mb-3" upload-image)
      label(for="avatar" class="form-label") Avatar
      input(
        type="file"
        class="form-control"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=user.avatar
        class="image-preview" 
        upload-image-preview
      )
      button(
        type="button"
        class="btn btn-danger"
        delete-upload-image
      ) Xóa ảnh

    div(class="mb-3")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật