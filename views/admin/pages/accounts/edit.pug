extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  if(role.permissions.includes("roles_edit"))
    h1(class="mb-4") Chỉnh sửa tài khoản

    +alert-success(5000)
    +alert-error(5000)

    if(roles)
      form(
        action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
      )
        div(class="mb-3")
          label(for="fullName" class="form-label") Họ tên
          input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
            value=data.fullName
          )
        div(class="mb-3")
          label(for="email" class="form-label") Email
          input(
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value=data.email
          )
        div(class="mb-3")
          label(for="password" class="form-label") Mật khẩu
          input(
            type="password"
            class="form-control"
            id="password"
            name="password"
          )
        div(class="mb-3")
          label(for="phone" class="form-label") Số điện thoại
          input(
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            value=data.phone
          )
        div(
          class="mb-3"
          upload-image
        )
          label(for="avatar" class="form-label") Avatar
          input(
            type="file"
            class="form-control" 
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
          )
          img(
            src=data.avatar
            class="image-preview"
            upload-image-preview
          )
          button(
            type="button"
            class="btn btn-danger"
            delete-upload-image
          ) Xóa ảnh
        div(class="mb-3")
          label(for="role_id" class="form-label") Phân quyền
          select(name="role_id" id="role_id" class="form-select") 
            option(disabled selected) -- Chọn --
            each item in roles
              option(
                value=item.id
                selected=(item.id == data.role_id ? true : false)
              ) #{item.title}
        
        div(class="mb-3") 
          div(class="form-check form-check-inline")
            input(
              type="radio"
              class="form-check-input"
              id="statusActive"
              name="status"
              value="active"
              checked=(data.status == "active")
            )
            label(for="statusActive" class="form-check-label") Hoạt động
          div(class="form-check form-check-inline")
            input(
              type="radio"
              class="form-check-input"
              id="statusInActive"
              name="status"
              value="inactive"
              checked=(data.status == "inactive")
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động

        div(class="mb-3")
          button(
            type="submit"
            class="btn btn-primary"
          ) Cập nhật
    else
      p Vui lòng tạo nhóm quyền trước khi cập nhật tài khoản
      p
        a(href=`${prefixAdmin}/roles/create` class="btn btn-secondary") Tạo nhóm quyền
    
    script(src="/admin/js/script.js") 