extends ../../layouts/default.pug
include ../../mixins/search
include ../../mixins/pagination
include ../../mixins/alert

block main
  h1 Danh sách sản phẩm bị xóa
  +alert-success("5000")

  .card.mb-3
    .card-header 
      .row  
        .col-6 Tìm kiếm
        .col-6 
          +search(keyword)
      

    .card-body
      form(
        action=`${prefixAdmin}/products/restore-multi?_method=PATCH`
        method="POST"
        form-restore-multi
      )
        .form-group
          input(
            type="text"
            name="ids"
            value=""
            class="form-control d-none"
          )
        button(type="submit" class="btn btn-primary") Khôi phục tất cả

      table(
        class="table table-hover table-sm"
        checkbox-multi
      )
        thead
          tr  
            th 
              input(type="checkbox", name="checkall")
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Vị trí
            th Trạng thái
            th Hành động
        tbody
          each item, index in products
            tr  
              td 
                input(
                  type="checkbox"
                  name="id"
                  value=item.id
                )
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td #{item.price}$
              td 
                input(
                  type="number"
                  value=item.position 
                  style="width: 60px"
                  min="1"
                  name="position"
                )
              td
                if(item.status == "active")
                  a(
                    class="badge text-bg-success"
                  ) Hoạt động
                else 
                  a(
                    class="badge text-bg-danger"
                  ) Dừng hoạt động
              td
                button(
                  class="btn btn-info btn-sm"
                  button-restore
                  data-id=item.id
                ) Khôi phục

  +pagination(pagination)

  form(
    action=""
    method="POST"
    id="form-restore"
    data-path=`${prefixAdmin}/products/restore`
  ) 

  script(src="/admin/js/product.js") 