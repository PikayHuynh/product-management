mixin pagination(pagination)
  nav
    ul(class="pagination")
      if pagination.currentPage != 1
        li(class="page-item")
          button(
            class="page-link"
            button-pagination=1
          ) Trang đầu

      if pagination.currentPage > 1
        li(class="page-item")
          button(
            class="page-link"
            button-pagination=pagination.currentPage - 1
          ) Trang trước

      - let startPage = Math.max(1, pagination.currentPage - 1);
      - let endPage = Math.min(pagination.totalPage, startPage + 2);
      - for(let i = startPage; i <= endPage; i++)
        li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
          button(
            class="page-link"
            button-pagination=i
          ) #{i}

      if pagination.currentPage < pagination.totalPage
        li(class="page-item")
          button(
            class="page-link"
            button-pagination=pagination.currentPage + 1
          ) Trang kế tiếp

      if pagination.currentPage != pagination.totalPage && pagination.totalPage != 0
        li(class="page-item")
          button(
            class="page-link"
            button-pagination=pagination.totalPage
          ) Trang cuối