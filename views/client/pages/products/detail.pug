extends ../../layouts/default.pug
include ../../mixins/box-head

block main
  .product-detail
    .container.my-5
      .row
        .col-md-6
          .inner-thumb
            img.img-fluid(src=product.thumbnail, alt=product.title)
        .col-md-6
          h1.inner-title.fw-bold.fs-2 #{product.title}
          if product.category
            .inner-category.mb-3
              span.fw-bold Danh mục: 
              a.ms-2.text-decoration-none(href=`/products/${product.category.slug}`) #{product.category.title}
          if product.priceNew
            .inner-price-new.text-danger.fs-3.fw-bold.mt-3 #{product.priceNew}$
          if product.price
            .inner-price-old.text-decoration-line-through.text-muted #{product.price}$
          if product.discountPercentage
            .inner-percent.badge.bg-success.rounded-pill.mt-2
              | Giảm tới 
              span.ms-1 #{product.discountPercentage}%
          if product.stock
            .inner-stock.mt-3.text-muted
              | Còn lại
              span.fw-bold.ms-1 #{product.stock}
              |  sản phẩm
          form.mt-4(
            action=`/cart/add/${product.id}`,
            method="POST"
          )
            .mb-3
              label.form-label(for="quantity") Số lượng:
              input.form-control(
                type="number",
                name="quantity",
                value="1",
                min="1",
                max=product.stock
              )
            button.btn.btn-success.w-100(type="submit")
              i.bi.bi-cart-plus.me-2
              | Thêm vào giỏ hàng

    hr.my-5

    .container.my-5
      .row
        .col-12
          +box-head("Mô tả sản phẩm")
          .inner-desc !{product.description}
