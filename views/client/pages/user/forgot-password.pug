extends ../../layouts/default.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1.text-center Lấy lại mật khẩu
        form(
          action="/user/password/forgot"
          method="POST"
        )
          .form-floating.mb-3
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="Email"
              required
            )
            label(for="email") Email

          .d-grid
            button(
              type="submit"
              class="btn btn-primary"
            ) Gửi mail xác nhận